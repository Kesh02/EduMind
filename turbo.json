{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        "**/.env.*local",
        ".env"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                "public/dist/**"
            ],
            "env": [
                "NODE_ENV",
                "VITE_API_URL",
                "DATABASE_URL"
            ]
        },
        "lint": {
            "outputs": [],
            "cache": true
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ],
            "cache": true,
            "env": [
                "NODE_ENV"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        },
        "type-check": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [],
            "cache": true
        }
    }
}